{
    "extends": ["stylelint-config-standard"],
    "overrides": [
        {
            "files": ["*.js"],
            "customSyntax": "postcss-lit"
        }
    ],
    "plugins": ["stylelint-order"],
    "rules": {
        "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
        "block-no-empty": null
    }
}
